{
    "name": "jafaripur/php-microservice-user-service",
    "type" : "library",
    "description": "User service.",
    "keywords": ["microservice", "amqp", "rabbitmq"],
    "license": "MIT",
    "minimum-stability" : "dev",
    "prefer-stable": true,
    "readme": "README.md",
    "authors": [
        {
            "name": "Araz J",
            "email": "mjafaripur@yahoo.com",
            "homepage": "https://jafaripur.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "mjafaripur@yahoo.com",
        "issues": "https://github.com/jafaripur/php-microservice-user-service/issues",
        "source": "https://github.com/jafaripur/php-microservice-user-service",
        "docs": "https://github.com/jafaripur/php-microservice-user-service/blob/master/README.md"
    },
    "require": {
        "php" : "^8.0",
        "jafaripur/php-microservice": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "overtrue/phplint": "^4.0",
        "vimeo/psalm": "^4.18"
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "phplint": "vendor/bin/phplint"
    },
    "suggest": {
        "jafaripur/php-microservice-application": "Sample microservice application template using this library"
    },
    "autoload": {
        "psr-4": { "Araz\\Service\\User\\": "src/" }
    },
    "config": {
        "optimize-autoloader": true,
		"classmap-authoritative": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
